# Optional additional protection for the admin area.
# Replace "/absolute/path/to/.htpasswd" with the real path to your htpasswd file
# and update credentials accordingly. Comment out the block if Basic Auth is not desired.
AuthType Basic
AuthName "Admin Area"
AuthUserFile "/absolute/path/to/.htpasswd"
Require valid-user

# Prevent directory listings.
Options -Indexes

# Deny direct access to uploaded originals and thumbnails if required.
<FilesMatch "\.(jpg|jpeg|png|gif|webp)$">
    <IfModule mod_authz_core.c>
        Require all granted
    </IfModule>
    <IfModule !mod_authz_core.c>
        Allow from all
    </IfModule>
</FilesMatch>
